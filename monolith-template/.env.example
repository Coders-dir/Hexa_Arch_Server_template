# Example env for monolith template
# Rename to .env and fill values

APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000

# Database (Mongo / Postgres example shown)
# For Mongo: MONGO_URI=mongodb://user:pass@mongo:27017/app_db
# For Postgres: DATABASE_URL=postgresql+asyncpg://user:pass@postgres:5432/app_db
DATABASE_URL=

# Supabase / Postgres example
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=

# MongoDB Atlas example
MONGO_URI=

# JWT / app secrets
JWT_SECRET=change-me-set-a-long-random-string
APP_SECRET_KEY=change-me

# Sentry (optional)
SENTRY_DSN=

# Metrics
PROMETHEUS_ENABLED=false

# GitHub secret mapping notes:
# DATABASE_URL_STAGING -> staging DB URL
# DATABASE_URL_PROD -> prod DB URL
# DB_MIGRATION_URL -> admin DB URL (if separate)

